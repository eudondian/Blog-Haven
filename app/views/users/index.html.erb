<h1 class='title'>Welcome to Blog-Haven</h1>
<% if @users.empty? %>
  <p class='user_empty-message'>No users yet!</p>
<% else %>
  <div class='container'>
    <% @users.each do |user| %>
      <div>
        <div class='avatar'>
          <%= image_tag(user.photo) %>
        </div>
        <div><h2><%= link_to "#{user.name} ##{user.id}" , user_path(user) %></h2></div>
        <div> <p>Number of posts: <%= user.posts_counter %></p> </div>
      </div>
    <% end %>
  </div>
<% end %>
