<h1>Create a New Post</h1>
<%= bootsrap_form_with(model: @post, url: user_posts_path, method: :post) do |form| %>
  <div class="form-comme">
  <%= form.text_field :text, autofocus: true, required: true, placeholder: :"Add comment" %>
  </div>
  
       <%= form.submit 'Add comment' class: "button-comment" %>
<% end %>
