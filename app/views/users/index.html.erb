<h1 class='title'>Welcome to Blog-Haven</h1>
<% if @users.empty? %>
  <p class='user_empty-message'>No users yet!</p>
<% else %>
  <ul id='user-container'>
    <% @users.each do |user| %>
      <li>
        <div class='user'>
          <div class='avatar'>
            <%= image_tag(user.photo) %>
          </div>
          <div class='users'>
            <h2><%= user.name %></h2>
              <p><%= link_to "View Profile", user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
